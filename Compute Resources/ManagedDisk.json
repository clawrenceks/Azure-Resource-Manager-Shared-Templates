{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "diskName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 80,
      "metadata": {
        "description": ""
      }
    },
    "diskSku": {
      "type": "string",
      "allowedValues": [
        "Standard_LRS",
        "Premium_LRS"
      ],
      "metadata": {
        "description": ""
      }
    },
    "diskSizeInGb": {
      "type": "int",
      "metadata": {
        "description": ""
      }
    },
    "deploymentLocation": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "The Azure location that the resource should be deployed into. Defaults to the location of the resource group."
      }
    }
  },
  "variables": {
    "resourceId": "[resourceId('Microsoft.Compute/disks',parameters('diskName'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Compute/disks",
      "name": "[parameters('diskName')]",
      "apiVersion": "2017-03-30",
      "location": "[parameters('deploymentLocation')]",
      "sku": {
        "name": "[parameters('diskSku')]"
      },
      "properties": {
        "creationData": {
          "createOption": "Empty"
        },
        "diskSizeGB": "[parameters('diskSizeInGb')]"
      }
    }
  ],
  "outputs": {
    "resourceId": {
      "type": "string",
      "value": "[variables('resourceId')]"
    }
  }
}