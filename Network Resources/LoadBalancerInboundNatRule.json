{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "ruleName": {
      "type": "string",
      "metadata": {
        "description": "The name of the inbound nat rule to be created."
      }
    },
    "frontendIpConfigurationId": {
      "type": "string",
      "metadata": {
        "description": "The resource ID of the load balancer front end IP configuration that should be associated with the nat rule."
      }
    },
    "protocol": {
      "type": "string",
      "allowedValues": [
        "Tcp",
        "Udp"
      ],
      "metadata": {
        "description": "The protocol for the inbound nat rule to be created."
      }
    },
    "frontendPort": {
      "type": "int",
      "minValue": 1,
      "maxValue": 65535,
      "metadata": {
        "description": "The frontend port for the inbound nat rule."
      }
    },
    "backendPort": {
      "type": "int",
      "minValue": 1,
      "maxValue": 65535,
      "metadata": {
        "description": "The backend port for the inbound nat rule."
      }
    },
    "enableFloatingIp": {
      "type": "bool",
      "metadata": {
        "description": "Specifies if Floating IP should be enabled for the nat rule."
      }
    },
    "deploymentLocation": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "The Azure location that the resource should be deployed into. Defaults to the location of the resource group."
      }
    }
  },
  "variables": {
    "resourceId": "[resourceId('Microsoft.Network/loadBalancers/inboundNatRules',parameters('ruleName'))]"
  },
  "resources": [
    {
      "apiVersion": "2017-10-01",
      "type": "Microsoft.Network/loadBalancers/inboundNatRules",
      "name": "[parameters('ruleName')]",
      "location": "[parameters('deploymentLocation')]",
      "properties": {
        "frontendIPConfiguration": {
          "id": "[parameters('frontendIpConfigurationId')]"
        },
        "protocol": "[parameters('protocol')]",
        "frontendPort": "[parameters('frontendPort')]",
        "backendPort": "[parameters('backendPort')]",
        "enableFloatingIP": "[parameters('enableFloatingIp')]"
      }
    }
  ],
  "outputs": {
    "resourceId": {
      "type": "string",
      "value": "[variables('resourceId')]"
    }
  }
}