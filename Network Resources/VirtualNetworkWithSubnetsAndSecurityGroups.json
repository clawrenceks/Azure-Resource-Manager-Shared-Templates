{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vNetName": {
      "type": "string",
      "minLength": 2,
      "maxLength": 64,
      "metadata": {
        "description": "The name of the virtual network to create."
      }
    },
    "vNetAddressSpaces": {
      "type": "array",
      "minLength": 1,
      "metadata": {
        "description": "The address spaces for the virtual network."
      }
    },
    "vNetSubnets": {
      "type": "array",
      "metadata": {
        "description": "An array of subnets, including network security group references, to be created in the virtual network."
      }
    }
  },
  "variables": {

  },
  "resources": [
    {
      "name": "[parameters('vNetName')]",
      "type": "Microsoft.Network/virtualNetworks",
      "apiVersion": "2016-10-01",
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "parameters('vNetAddressSpaces')"
          ]
        },
        "subnets": "[parameters('vNetSubnets')]",
        "dhcpOptions": {
          "dnsServers": [""]
        }
      }
    }
  ],
  "outputs": {

  }
}